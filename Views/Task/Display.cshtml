@model IEnumerable<TechNeuronsProj.Models.Domain.Task>
<div class="container">
    <div class="row">
        <div class="col-md-6 text-end text-uppercase">
            <h2>Employee</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Task" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create</a>
        </div>
    </div>
    <hr />
    @if (Model != null && Model.Count() > 0)
    {
        <table id="table" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">Id</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">Description</th>
                    <th class="text-center">Action</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td width="15%">@task.Id</td>
                        <td width="15%">@task.Name</td>
                        <td width="40%">@task.Description</td>
                        <td class="d-flex align-items-center justify-content-center">
                            <div class="w-50 btn-group" role="group">
                                <a asp-controller="Task" asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit"><i class="bi bi-pencil-square"></i></a>
                                <a asp-controller="Task" asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete"><i class="bi bi-trash-fill"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="row">
            <div class="col-md-12 text-uppercase text-center text-warning">
                <h2>No Records To show</h2>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $('.table').DataTable();
    </script>
}

